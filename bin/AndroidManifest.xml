<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.education.rememberpattern"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />
<!--  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"-->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_pattern"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
         >
        <activity
            android:name="org.education.rememberpattern.PlayPattern"
            android:label="@string/app_name"
            android:screenOrientation="portrait"  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
             <intent-filter>
                <action android:name="org.education.rememberpattern.PlayPattern" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>
      <activity 
            android:label="RememberPattern"
            android:name=".RememberPattern"
            android:screenOrientation="portrait">
            
             <intent-filter>
                <action android:name="org.education.rememberpattern.RememberPattern" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        
        
        <activity 
            android:label="FindPattern"
            android:name=".FindPattern"
            android:screenOrientation="portrait">
            
             <intent-filter>
                <action android:name="org.education.rememberpattern.FindPattern" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
          <activity 
            
            android:name=".AboutPattern"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="portrait">
            
             <intent-filter>
                <action android:name="org.education.rememberpattern.AboutPattern" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity 
            
            android:name=".PreferencePattern"
            android:label="@string/settings_title">
            
            
           
        </activity>
    </application>

</manifest>